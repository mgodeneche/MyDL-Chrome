{
"name" :"__MSG_appName__",
"version" :"1.1",
"manifest_version": 2,
"default_locale": "en",
"description" :"__MSG_appDesc__",
"author" : ["Maxence Godeneche","Bob Delatouffe"],
"browser_action" :
	{
		"default_popup" :"views/pop_out.html",
		 "default_icon": {                   
            "38": "public/icon.png"            
          }
	},
"permissions": [
			"downloads",
			"http://localhost/"
        ],
"background": 
	{
		"persistent": false, 
		"scripts": [
			"js/background.js"
			
		]
	},
"content_scripts": 
	[
	    {
	      "matches": ["<all_urls>"],
	      "css": ["css/pop_out.css"],
	      "js": ["js/jquery-2.1.4.min.js", "js/background.js"]
	    }
 	]

}
